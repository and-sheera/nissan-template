extends ../../layouts/layout

block variables
  -
    const pageName = 'services'
    const pageTitle = 'services'

block content
  main
    +section
      .inner
        +section__head
          +ui-h2('Услуги и сервисы')
    +main-ban
    +section
      .inner
        +about
          .about__section.about__section--head
            +ui-h2('ПОДДЕРЖКА В любых УСЛОВИЯХ', '--light')
            +ui-p1('Наслаждайтесь комфортом, качеством, технологиями и динамикой своего Nissan! Если вам нужна помощь, вы можете положиться на нас: удобные и выгодные финансовые программы, услуги по обслуживанию автомобиля и многое другое — мы всегда рядом!', '--light')
    +section('--bg, --ov-h')
      .inner
        +section__head
          +ui-h2('Услуги и акции сервиса')
        +slider('--3slides')
          -for(let i=0; i<5; i++)
            +info-card.swiper-slide
    +section('--bg')
      .inner
        +section__head
          +ui-h2('Запись на сервис', '--light')
        +form
