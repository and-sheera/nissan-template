mixin models-list(mods)
  -
    const baseName = 'models-list'
    let allMods = ''
    if (typeof mods !== 'undefined' && mods) {
      const modsList = mods.split(',')
      for (const element of modsList) {
        allMods += element.trim()[0] === '-' ? ' ' + baseName + element.trim() : ' ' + element.trim() + '__' + baseName
      }
      allMods = allMods.trim()
    }

    const data = [
      'Nissan X-TRAIL',
      'Nissan Pathfinder',
      'Nissan Qashqai',
      'Nissan Murano',
      'Nissan Terrano'
    ]

  .models-list(class=allMods)&attributes(attributes)
    each item in data
      a.models-list__item(href='#') !{item}
    block
