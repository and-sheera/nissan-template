mixin map(mods)
  -
    const baseName = 'map'
    let allMods = ''
    if (typeof mods !== 'undefined' && mods) {
      const modsList = mods.split(',')
      for (const element of modsList) {
        allMods += element.trim()[0] === '-' ? ' ' + baseName + element.trim() : ' ' + element.trim() + '__' + baseName
      }
      allMods = allMods.trim()
    }

  .map(class=allMods)&attributes(attributes)
    iframe(src='https://yandex.ru/map-widget/v1/?from=api-maps&ll=39.299299%2C51.663206&mode=poi&origin=jsapi_2_1_79&poi%5Bpoint%5D=39.300319%2C51.661968&poi%5Buri%5D=ymapsbm1%3A%2F%2Forg%3Foid%3D1643651077&z=16', width='100%', height='100%' allowfullscreen)
    block
